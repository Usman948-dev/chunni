import React, { useState, useEffect } from 'react';
import { ClerkProvider, SignIn, SignUp, useAuth, useUser, SignedIn, SignedOut, UserButton } from '@clerk/clerk-react';
import { Upload, Download, Plus, Trash2, AlertCircle, Loader, ChevronLeft, LogOut } from 'lucide-react';

// REPLACE THIS WITH YOUR CLERK PUBLISHABLE KEY
const CLERK_PUBLISHABLE_KEY = 'pk_test_c3VwZXJiLWhhZGRvY2stNDIuY2xlcmsuYWNjb3VudHMuZGV2JA';
const API_URL = 'http://localhost:5000'; // or your Render URL

function PDFExtractorApp() {
  const { isSignedIn, getToken } = useAuth();
  const { user } = useUser();
  
  const [screen, setScreen] = useState('dashboard');
  const [trialDays, setTrialDays] = useState(7);
  const [file, setFile] = useState(null);
  const [pagesInput, setPagesInput] = useState('');
  const [nameInput, setNameInput] = useState('');
  const [extractedData, setExtractedData] = useState(null);
  const [loading, setLoading] = useState(false);
  const [error, setError] = useState(null);
  const [modal, setModal] = useState(null);
  const [tableData, setTableData] = useState([]);
  const [serverStatus, setServerStatus] = useState('checking');

  useEffect(() => {
    checkServerStatus();
  }, []);

  const checkServerStatus = async () => {
    try {
      const response = await fetch(`${API_URL}/api/health`);
      if (response.ok) {
        setServerStatus('awake');
      } else {
        setServerStatus('waking');
        setTimeout(checkServerStatus, 3000);
      }
    } catch (error) {
      setServerStatus('waking');
      setTimeout(checkServerStatus, 3000);
    }
  };

  const handleFileChange = (e) => {
    const selectedFile = e.target.files?.[0];
    if (selectedFile && selectedFile.type === 'application/pdf') {
      setFile(selectedFile);
      setError(null);
    } else {
      setError('Please select a valid PDF file');
      setFile(null);
    }
  };

  const handleExtract = async () => {
    if (!file) {
      setError('Please select a PDF file');
      return;
    }

    setLoading(true);
    setError(null);

    const formData = new FormData();
    formData.append('file', file);
    formData.append('pages', pagesInput || '');
    formData.append('name', nameInput || 'My Project');

    try {
      // Get auth token from Clerk
      const token = await getToken();
      
      const response = await fetch(`${API_URL}/api/extract`, {
        method: 'POST',
        headers: {
          'Authorization': `Bearer ${token}` // Send auth token
        },
        body: formData,
      });

      const result = await response.json();

      if (!response.ok) {
        throw new Error(result.error || 'Extraction failed');
      }

      setExtractedData(result);
      setTableData(result.data || []);
      setScreen('editor');
    } catch (err) {
      setError(err.message);
    } finally {
      setLoading(false);
    }
  };

  const handleCellChange = async (rowIdx, colName, value) => {
    const updated = [...tableData];
    const numericFields = ['Quantity', 'Units No.', 'Govt Rate - Input', 'Quoted Rate - Input'];
    updated[rowIdx] = { 
      ...updated[rowIdx], 
      [colName]: numericFields.includes(colName) ? parseFloat(value) || 0 : value 
    };
    setTableData(updated);

    try {
      const token = await getToken();
      
      const response = await fetch(`${API_URL}/api/recalculate`, {
        method: 'POST',
        headers: { 
          'Content-Type': 'application/json',
          'Authorization': `Bearer ${token}`
        },
        body: JSON.stringify({
          data: updated,
          name: nameInput,
        }),
      });

      const result = await response.json();
      if (response.ok) {
        setTableData(result.data);
        setExtractedData(prev => ({
          ...prev,
          data: result.data,
          summary: result.summary
        }));
      }
    } catch (err) {
      console.error('Recalculation error:', err);
    }
  };

  const handleDownloadExcel = async () => {
    setLoading(true);
    setError(null);

    try {
      const token = await getToken();
      
      const response = await fetch(`${API_URL}/api/download-excel`, {
        method: 'POST',
        headers: { 
          'Content-Type': 'application/json',
          'Authorization': `Bearer ${token}`
        },
        body: JSON.stringify({
          data: tableData,
          name: nameInput,
        }),
      });

      if (!response.ok) throw new Error('Download failed');

      const blob = await response.blob();
      const url = window.URL.createObjectURL(blob);
      const a = document.createElement('a');
      a.href = url;
      a.download = 'edited_tables_with_formulas.xlsx';
      a.click();
      window.URL.revokeObjectURL(url);
    } catch (err) {
      setError(err.message);
    } finally {
      setLoading(false);
    }
  };

  const handleDeleteRow = (idx) => {
    setTableData(tableData.filter((_, i) => i !== idx));
  };

  const handleAddRow = () => {
    const newRow = {
      'Sr No.': '',
      'Items Description': '',
      'Units': '',
      'Units No.': 0,
      'Quantity': 0,
      'Govt Rate - Input': 0,
      'Govt Rate - Total': 0,
      'Quoted Rate - Input': 0,
      'Quoted Rate - Total': 0,
    };
    setTableData([...tableData, newRow]);
  };

  // DASHBOARD SCREEN
  if (screen === 'dashboard') {
    const features = [
      { id: 'bid', title: 'Create Bid', icon: 'üéØ', active: true },
      { id: 'stamp', title: 'STAMP PDF', icon: 'üñçÔ∏è', active: false },
      { id: 'merge', title: 'Merge & Organize PDF', icon: 'üìã', active: false },
      { id: 'create-stamp', title: 'Create Stamp', icon: '‚úèÔ∏è', active: false },
    ];

    return (
      <div className="min-h-screen bg-gradient-to-b from-blue-400 to-blue-500 p-4 pb-20">
        {/* Header with User Info */}
        <div className="bg-blue-300 rounded-3xl p-6 mb-6 text-white">
          <div className="flex items-center justify-between mb-4">
            <div className="flex items-center">
              <div className="w-12 h-12 bg-white bg-opacity-30 rounded-full flex items-center justify-center text-2xl mr-4">
                {user?.profileImageUrl ? (
                  <img src={user.profileImageUrl} alt="Profile" className="w-12 h-12 rounded-full" />
                ) : (
                  'üë§'
                )}
              </div>
              <div>
                <p className="font-semibold text-lg">Welcome Back, {user?.firstName || 'User'}</p>
                <p className="text-sm opacity-90">{user?.primaryEmailAddress?.emailAddress}</p>
              </div>
            </div>
            <UserButton afterSignOutUrl="/" />
          </div>

          <div className="bg-blue-400 bg-opacity-50 rounded-2xl p-4 mt-4">
            <p className="text-sm opacity-90 mb-1">Free Trial Left</p>
            <p className="text-3xl font-bold">{trialDays} Day{trialDays !== 1 ? 's' : ''}</p>
          </div>

          <button
            onClick={() => setModal('coming-soon')}
            className="w-full mt-4 bg-pink-500 hover:bg-pink-600 text-white font-bold py-3 rounded-xl transition"
          >
            Buy Premium Now for 500/Month
          </button>
        </div>

        {/* Features Grid */}
        <div className="grid grid-cols-2 gap-4">
          {features.map(feature => (
            <button
              key={feature.id}
              onClick={() => {
                if (feature.active) {
                  setScreen('createBid');
                } else {
                  setModal('coming-soon');
                }
              }}
              className={`rounded-3xl p-6 flex flex-col items-center justify-center py-8 transition ${
                feature.active
                  ? 'bg-white hover:shadow-lg'
                  : 'bg-white bg-opacity-80 opacity-75'
              }`}
            >
              <span className="text-4xl mb-3">{feature.icon}</span>
              <p className="font-semibold text-blue-500 text-center text-sm">{feature.title}</p>
            </button>
          ))}
        </div>

        {modal === 'coming-soon' && (
          <div className="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center p-4 z-50">
            <div className="bg-white rounded-3xl p-8 text-center max-w-sm">
              <h2 className="text-2xl font-bold text-gray-800 mb-4">Coming Soon</h2>
              <p className="text-gray-600 mb-6">This feature will be available soon!</p>
              <button
                onClick={() => setModal(null)}
                className="bg-blue-500 text-white font-semibold py-3 px-6 rounded-xl"
              >
                OK
              </button>
            </div>
          </div>
        )}
      </div>
    );
  }

  // CREATE BID SCREEN
  if (screen === 'createBid') {
    return (
      <div className="min-h-screen bg-gradient-to-b from-blue-400 to-blue-500 p-4 pb-20">
        <div className="flex items-center mb-6">
          <button
            onClick={() => setScreen('dashboard')}
            className="text-white hover:bg-blue-400 p-2 rounded-full"
          >
            <ChevronLeft size={28} />
          </button>
          <h1 className="text-2xl font-bold text-white ml-4">Create Bid</h1>
        </div>

        {serverStatus === 'waking' && (
          <div className="bg-yellow-100 border-l-4 border-yellow-500 text-yellow-700 p-4 mb-4 rounded-xl">
            <div className="flex items-center">
              <Loader size={20} className="animate-spin mr-3 flex-shrink-0" />
              <div>
                <p className="font-semibold">Server is waking up...</p>
                <p className="text-sm">This may take 30-60 seconds. Please wait.</p>
              </div>
            </div>
          </div>
        )}

        {serverStatus === 'awake' && (
          <div className="bg-green-100 border-l-4 border-green-500 text-green-700 p-4 mb-4 rounded-xl">
            <div className="flex items-center">
              <div className="w-3 h-3 bg-green-500 rounded-full mr-3 animate-pulse"></div>
              <p className="font-semibold">Server is ready!</p>
            </div>
          </div>
        )}

        <div className="bg-white rounded-3xl p-6 mb-4">
          <label className="block mb-2 text-gray-700 font-semibold">Upload PDF</label>
          <div className="border-2 border-dashed border-blue-300 rounded-2xl p-6 text-center bg-blue-50">
            <Upload className="mx-auto text-blue-400 mb-3" size={40} />
            <input
              type="file"
              accept=".pdf"
              onChange={handleFileChange}
              className="hidden"
              id="pdf-input"
            />
            <label htmlFor="pdf-input" className="cursor-pointer">
              <p className="text-blue-600 font-semibold">{file ? file.name : 'Click to select PDF'}</p>
              <p className="text-xs text-gray-500 mt-1">Maximum 50MB</p>
            </label>
          </div>
        </div>

        <div className="bg-white rounded-3xl p-6 mb-4">
          <label className="block mb-2 text-gray-700 font-semibold">Pages (Optional)</label>
          <input
            type="text"
            placeholder="e.g., 1,3-5 or leave blank for all"
            value={pagesInput}
            onChange={(e) => setPagesInput(e.target.value)}
            className="w-full border border-gray-300 rounded-xl px-4 py-3 focus:outline-none focus:border-blue-500"
          />
        </div>

        <div className="bg-white rounded-3xl p-6 mb-4">
          <label className="block mb-2 text-gray-700 font-semibold">Bid Name</label>
          <input
            type="text"
            placeholder="Enter bid name"
            value={nameInput}
            onChange={(e) => setNameInput(e.target.value)}
            className="w-full border border-gray-300 rounded-xl px-4 py-3 focus:outline-none focus:border-blue-500"
          />
        </div>

        {error && (
          <div className="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded-xl mb-4 flex items-start">
            <AlertCircle size={20} className="mr-3 mt-0.5 flex-shrink-0" />
            <span className="text-sm">{error}</span>
          </div>
        )}

        <button
          onClick={handleExtract}
          disabled={loading || !file || serverStatus === 'waking'}
          className={`w-full py-4 rounded-2xl font-bold text-white text-lg transition flex items-center justify-center ${
            loading || !file || serverStatus === 'waking'
              ? 'bg-gray-400 cursor-not-allowed'
              : 'bg-blue-600 hover:bg-blue-700'
          }`}
        >
          {loading ? (
            <>
              <Loader size={20} className="animate-spin mr-2" />
              Extracting...
            </>
          ) : serverStatus === 'waking' ? (
            <>
              <Loader size={20} className="animate-spin mr-2" />
              Server Waking Up...
            </>
          ) : (
            'Extract Tables'
          )}
        </button>
      </div>
    );
  }

  // EDITOR SCREEN  
  if (screen === 'editor' && extractedData) {
    const columns = extractedData.columns || [];
    const summary = extractedData.summary || {};

    return (
      <div className="min-h-screen bg-gradient-to-b from-blue-400 to-blue-500 p-4 pb-20">
        <div className="flex items-center mb-6">
          <button
            onClick={() => {
              setScreen('createBid');
              setExtractedData(null);
              setTableData([]);
              setFile(null);
              setError(null);
            }}
            className="text-white hover:bg-blue-400 p-2 rounded-full"
          >
            <ChevronLeft size={28} />
          </button>
          <h1 className="text-2xl font-bold text-white ml-4">Edit Tables</h1>
        </div>

        <div className="bg-white rounded-3xl p-6 mb-4">
          <p className="text-gray-600 mb-3"><strong>Name:</strong> {summary.name}</p>
          <div className="bg-blue-50 rounded-2xl p-4 mb-3">
            <p className="text-gray-600 text-sm">Grand Total (Govt)</p>
            <p className="text-2xl font-bold text-blue-600">‚Çπ {summary.grand_total_govt?.toFixed(2) || '0.00'}</p>
          </div>
          <div className="bg-blue-50 rounded-2xl p-4 mb-3">
            <p className="text-gray-600 text-sm">Grand Total (Quoted)</p>
            <p className="text-2xl font-bold text-blue-600">‚Çπ {summary.grand_total_quoted?.toFixed(2) || '0.00'}</p>
          </div>
          <div className="bg-green-50 rounded-2xl p-4">
            <p className="text-gray-600 text-sm">Rate Below From Govt</p>
            <p className="text-2xl font-bold text-green-600">{((summary.rate_below_govt || 0) * 100).toFixed(2)}%</p>
          </div>
        </div>

        {error && (
          <div className="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded-xl mb-4">
            <p className="text-sm">{error}</p>
          </div>
        )}

        <div className="bg-white rounded-3xl p-4 mb-4 overflow-x-auto">
          <div className="inline-block min-w-full">
            <table className="w-full text-sm">
              <thead>
                <tr className="border-b-2 border-blue-300">
                  {columns.map(col => (
                    <th key={col} className="px-3 py-3 text-left font-bold text-blue-600 text-xs whitespace-nowrap">
                      {col}
                    </th>
                  ))}
                  <th className="px-3 py-3 text-center font-bold text-blue-600 text-xs">Action</th>
                </tr>
              </thead>
              <tbody>
                {tableData.map((row, rowIdx) => (
                  <tr key={rowIdx} className="border-b border-gray-200 hover:bg-blue-50">
                    {columns.map(col => {
                      const isCalculated = ['Units No.', 'Govt Rate - Total', 'Quoted Rate - Total'].includes(col);
                      const isReadOnly = ['Sr No.', 'Items Description'].includes(col);
                      const isEditable = !isCalculated && !isReadOnly;
                      const value = row[col] ?? '';
                      
                      return (
                        <td key={`${rowIdx}-${col}`} className="px-3 py-3">
                          {isEditable ? (
                            <input
                              type={col.includes('Rate') || col.includes('Quantity') ? 'number' : 'text'}
                              step="0.01"
                              value={value}
                              onChange={(e) => handleCellChange(rowIdx, col, e.target.value)}
                              className="w-full border border-gray-300 rounded-lg px-2 py-1 text-xs focus:outline-none focus:border-blue-500"
                            />
                          ) : (
                            <span className={`text-xs font-medium ${isCalculated ? 'text-green-600 bg-green-50 px-2 py-1 rounded' : 'text-gray-700'}`}>
                              {typeof value === 'number' ? value.toFixed(2) : value}
                            </span>
                          )}
                        </td>
                      );
                    })}
                    <td className="px-3 py-3 text-center">
                      <button
                        onClick={() => handleDeleteRow(rowIdx)}
                        className="text-red-500 hover:text-red-700 p-1"
                      >
                        <Trash2 size={16} />
                      </button>
                    </td>
                  </tr>
                ))}
              </tbody>
            </table>
          </div>

          <button
            onClick={handleAddRow}
            className="w-full mt-4 border-2 border-dashed border-blue-400 rounded-xl py-3 text-blue-600 font-semibold flex items-center justify-center hover:bg-blue-50"
          >
            <Plus size={20} className="mr-2" />
            Add Row
          </button>
        </div>

        <button
          onClick={handleDownloadExcel}
          disabled={loading}
          className={`w-full py-4 rounded-2xl font-bold text-white text-lg transition flex items-center justify-center ${
            loading ? 'bg-gray-400 cursor-not-allowed' : 'bg-green-500 hover:bg-green-600'
          }`}
        >
          {loading ? (
            <>
              <Loader size={20} className="animate-spin mr-2" />
              Generating...
            </>
          ) : (
            <>
              <Download size={20} className="mr-2" />
              Download Excel
            </>
          )}
        </button>
      </div>
    );
  }

  return null;
}

// Main App with Clerk Provider
export default function App() {
  return (
    <ClerkProvider publishableKey={CLERK_PUBLISHABLE_KEY}>
      <SignedOut>
        {/* Login/Signup Screen */}
        <div className="min-h-screen bg-gradient-to-b from-blue-400 to-blue-500 flex flex-col justify-center items-center p-6">
          <div className="bg-white rounded-3xl p-8 shadow-2xl max-w-md w-full">
            <h1 className="text-4xl font-bold text-center text-blue-600 mb-8">PDF Extractor</h1>
            <SignIn routing="hash" signUpUrl="#/sign-up" />
            <p className="text-center mt-4 text-gray-600 text-sm">
              Don't have an account? <a href="#/sign-up" className="text-blue-600 font-semibold">Sign Up</a>
            </p>
          </div>
        </div>
      </SignedOut>
      
      <SignedIn>
        <PDFExtractorApp />
      </SignedIn>
    </ClerkProvider>
  );
}
